{
	"name": "training-app",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"lint-staged": {
		"apps/**/*.{js,ts,jsx,tsx}": ["biome format --write .", "biome check ."],
		"packages/**/*.{js,ts,jsx,tsx}": ["biome format --write .", "biome check ."]
	},
	"scripts": {
		"check": "turbo check",
		"build": "turbo build",
		"clean": "turbo clean && rm -rf node_modules",
		"format": "turbo format",
		"typecheck": "turbo typecheck",
		"prepare": "husky",
		"dev:app": "turbo dev --filter=webapp... --filter=@myapp/server..."
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/node": "^22.14.1",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.1",
		"turbo": "^2.5.0",
		"typescript": "~5.7.2"
	},
	"packageManager": "pnpm@10.8.1"
}
