{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"outputs": ["dist/**"]
		},
		"typecheck": {
			"dependsOn": ["^typecheck"]
		},
		"check": {
			"dependsOn": ["^check"]
		},
		"format": {
			"dependsOn": ["^format"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"clean": {
			"cache": false
		}
	}
}
